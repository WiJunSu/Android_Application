<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/moviekind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:drawableStart="@drawable/ic_favorite_border_black_24dp"
        android:drawableLeft="@drawable/ic_favorite_border_black_24dp"
        android:drawableEnd="@drawable/ic_favorite_border_black_24dp"
        android:drawableRight="@drawable/ic_favorite_border_black_24dp"
        android:text="asdasd"
        android:textColor="@color/gals"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1b1b1b"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/movieImage"
            android:layout_marginRight="50dp"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:src="@drawable/sss"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/movieName"
            android:layout_marginRight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="영화 제목"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />
    </LinearLayout>


</LinearLayout>
