<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pre"
        android:drawableStart="@drawable/ic_person_black_24dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:gravity="start"
        android:text="고객님"
        android:textColor="#000000"
        android:textSize="15sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true">


        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <VideoView
                    android:id="@+id/videoview"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginTop="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#FFFFFF" />

                <Gallery
                    android:id="@+id/gallery"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:background="#0b000000"
                    android:spacing="23dp" />

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#FFFFFF" />

                <ViewFlipper
                    android:id="@+id/vf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/th1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="MOBILE"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/th2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="105dp"
                        android:text="MEGABOX"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/th3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="200dp"
                        android:text="CGV"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/th4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="295dp"
                        android:text="LOTTE"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/th5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="25dp"
                        android:text="유성"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/th6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="105dp"
                        android:layout_marginTop="25dp"
                        android:text="탄방"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/th7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="25dp"
                        android:text="복합터미널"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/th8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="295dp"
                        android:layout_marginTop="25dp"
                        android:text="둔산동"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />
                </ViewFlipper>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/bt_web"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:background="#d2e9f5"
                        android:drawableStart="@drawable/ic_search_black_24dp"
                        android:drawableLeft="@drawable/ic_search_black_24dp"
                        android:drawableEnd="@drawable/ic_search_black_24dp"
                        android:drawableRight="@drawable/ic_search_black_24dp"
                        android:gravity="center"
                        android:text="WEB SEARCH" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/music_play"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="3dp"
                            android:layout_weight="1"
                            android:background="#d2f5d9"
                            android:drawableStart="@drawable/ic_audiotrack_black_24dp"
                            android:drawableLeft="@drawable/ic_audiotrack_black_24dp"
                            android:drawableEnd="@drawable/ic_arrow_back_black_24dp"
                            android:drawableRight="@drawable/ic_arrow_back_black_24dp"
                            android:gravity="center"
                            android:text="BGM PLAY" />

                        <Button
                            android:id="@+id/music_pause"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:background="#d2f5d9"
                            android:drawableStart="@drawable/ic_arrow_forward_black_24dp"
                            android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
                            android:drawableEnd="@drawable/ic_audiotrack_black_24dp"
                            android:drawableRight="@drawable/ic_audiotrack_black_24dp"
                            android:gravity="center"
                            android:text="BGM PAUSE" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/next"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:background="#f6def7"
                        android:drawableStart="@drawable/ic_arrow_forward_black_24dp"
                        android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
                        android:drawableEnd="@drawable/ic_arrow_back_black_24dp"
                        android:drawableRight="@drawable/ic_arrow_back_black_24dp"
                        android:text="NEXT PAGE / GENRE" />

                    <Button
                        android:id="@+id/end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:background="#fac8cc"
                        android:drawableStart="@drawable/ic_power_settings_new_black_24dp"
                        android:drawableLeft="@drawable/ic_power_settings_new_black_24dp"
                        android:drawableEnd="@drawable/ic_power_settings_new_black_24dp"
                        android:drawableRight="@drawable/ic_power_settings_new_black_24dp"
                        android:text="Finish" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>